def shift_char(input_text, rotation):
    shifted_text = [
        chr((ord(character) + rotation - 65) % 26 + 65) if character.isupper() else
        chr((ord(character) + rotation - 97) % 26 + 97) if character.islower() else
        character
        for character in input_text
    ]
    return ''.join(shifted_text)

def compress_rle(input_text):
    compressed_text = []
    index = 0
    while index < len(input_text):
        count = 1
        while index + 1 < len(input_text) and input_text[index] == input_text[index + 1]:
            index += 1
            count += 1
        compressed_text.append(input_text[index] + (str(count) if count > 1 else ""))
        index += 1
    return ''.join(compressed_text)

def caesar(input_text, rotation):
    shifted_text = shift_char(input_text, rotation)
    return compress_rle(shifted_text)


input_text = input()
rotation = int(input())
output_text = caesar(input_text, rotation)
print( input_text)
print( output_text)

output: D2EF3
